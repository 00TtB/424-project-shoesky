  <body>
 
    <header class="blog-header py-3 bg-white">   
      <div class="row flex-nowrap justify-content-between align-items-center">
        <form class="sea d-flex w-25" action="/search" method="get">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
          <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>
        <div id="navbar" class="col-4 text-center">
       
            <a class="logo blog-header-logo" href="/">Shoesky</a>
       
        </div>
        <div class="he col-4 d-flex justify-content-end align-items-center">
            <% if(!user){ %>
              <li><a class="btn btn-sm btn-outline-success" href="/users/register">Register</a></li>
              <li><a class="btn btn-sm btn-outline-success" href="/users/login">Login</a></li> 
            <% } else { %>
              <li>
                <a class="cart" href="/cart/checkout">Cart</a>
              </li>
              <li>
                <div class="dropdown">
                  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= user.username %>
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="/cart/history">History</a></li>
                    <li><a class="dropdown-item" href="/users/logout">Logout</a></li>
                  </ul>
                </div>
              </li>
            <% } %>
            <% if(user && user.admin == 1){ %>
              <li><a href="/admin/pages">Admin Area</a></li>
            <% } %>
        </div>
      </div> 
      
    </header>     
  <div class="catebar nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between ">
      <a class="cat p-2" href="/products">all</a>
      <% categories.forEach(function(c){ %>
        <a class="cat p-2" href="/products/<%= c.slug %>"><%= c.title %></a>
      <% }); %>
    </nav>
  </div>
    <%- include('../messages.ejs') %>
    <% if(errors) { %>
      <% errors.forEach(function(error){ %>
        <div class="alert alert-danger" role="alert">
          <%= error.msg %>
        </div>
      <% }); %>
    <% } %>