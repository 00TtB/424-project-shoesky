<%- include("_layouts/header.ejs") %>

<div class="album py-5">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">      
        <% products.forEach(function(p){ %>
            <div class="col">
                <div class="card shadow-sm">
                    <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                     <img width="419px" height="300px" class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>">
                    </a>
                    <div class="card-body">
                        <p class="card-text"><%= p.title %></p>
                        <p class="card-text"><%= p.category %></p>
                        <p class="card-text">$<%= parseFloat(p.price).toFixed(2) %></p>
                    </div>
                </div>
            </div>
        <% }); %>
      </div>
    </div>
</div>

<%- include("_layouts/footer.ejs") %>