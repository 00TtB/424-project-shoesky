<%- include("_layouts/header.ejs") %>
<div class="container">
    
<h1>Checkout</h1>
<% let total = 0; %>
        <% cart.forEach(function(product){ %>
            <% let sub = parseFloat(product.qty * product.price).toFixed(2) %>
            <% total += +sub %>
        <% }); %>
<h4>Your Total: $<%= parseFloat(total).toFixed(2) %></h4>
<br>
<!-- <% cart.forEach(function(product){ %>
    <%= product.title %>
    <img class="cpi" src="<%= product.image %>">
<% }); %> -->
<form action="/cart/orders" method="POST" id="checkout-form">
    <div class="col-xs-12">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" id="name">
    </div>
    <div class="col-xs-12">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" id="address">
    </div>
    <div class="col-xs-12">
        <label class="form-label">Card Holder Name</label>
        <input type="text" class="form-control" name="cardname" placeholder="Card Holder Name" id="card-name">
    </div>
    <div class="col-xs-12">
        <label class="form-label">Credit Card Number</label>
        <input type="text" class="form-control" name="cardnum" placeholder="Credit Card Number" id="card-number">
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-6">
                <label class="form-label">Expiration Month</label>
                <input type="text" class="form-control" name="expmonth" placeholder="Expiration Month" id="card-expiry-month">
            </div>
            <div class="col-xs-6">
                <label class="form-label">Expiration Year</label>
                <input type="text" class="form-control" name="expyear" placeholder="Expiration Year" id="card-expiry-year">
            </div>  
        </div>
    </div>
    <div class="col-xs-12">
        <label class="form-label">CVC</label>
        <input type="password" class="form-control" name="cvc" placeholder="CVC" id="card-cvc">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Buy now</button>
    
    <a class="gb" href="/">Go back</a>
</form>
</div>
<br><br><br><br><br><br><br><br><br><br><br><br>
